<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.scottmobleyschreibman.agecalculator" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="Age Calculator"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".AgeInputActivity"
            android:label="Age Calculator" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
            <activity
                android:name=".CalculateActivity"
                android:label="CalculateActivity"
                android:parentActivityName=".AgeInputActivity">

                <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="com.scottmobleyschreibman.agecalculator.MainActivity" />

        </activity>
    </application>

</manifest>
